            <div class="col-md-4">
                <div class="restaurant-card position-relative">
                    <img src="~/popular2.jpg" alt="Dish">
                    @* <span class="promoted-badge">Promoted</span> *@
                    @* <i class="far fa-heart favorite-icon"></i> *@
                    <div class="restaurant-info">
                        <h5>Thai Famous Indian Cuisine</h5>
                        <p>Indian • Pure Veg</p>
                        <div class="star-rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star inactive"></i>
                        </div>
                        <span class="rating">3.1 (300+)</span>
                        <span class="offer-badge">65% Off</span>
                    </div>
                </div>
            </div>
            <!-- Card 3 -->
            <div class="col-md-4">
                <div class="restaurant-card position-relative">
                    <img src="~/popular3.jpg" alt="Dish">
                    @* <span class="promoted-badge">Promoted</span> *@
                    @* <i class="far fa-heart favorite-icon"></i> *@
                    <div class="restaurant-info">
                        <h5>Bite Me Now Sandwiches</h5>
                        <p>American • Pure Veg</p>
                        <div class="star-rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star inactive"></i>
                        </div>
                        <span class="rating">3.1 (300+)</span>
                        <span class="offer-badge">65% Off</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- JavaScript -->
    <script>
        const categoryItems = document.querySelectorAll('.category-item');
        const menuContainers = document.querySelectorAll('.menu-container');

        categoryItems.forEach(item => {
            item.addEventListener('click', () => {
                const category = item.getAttribute('data-category');

                // Hide all menus
                menuContainers.forEach(menu => menu.classList.remove('active'));

                // Show selected menu
                document.getElementById(category).classList.add('active');
            });
        });
    </script>
</body>
</html>