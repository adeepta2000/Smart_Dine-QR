    <!-- Most popular Section -->
    <div class="container mt-4">
        <h2>Most Popular</h2>
        <div class="row g-4">
            <!-- Card 1 -->
            <div class="col-md-4">
                <div class="restaurant-card position-relative">
                    <img src="~/popular1.jpg" alt="Dish">
                    @* <span class="promoted-badge">Promoted</span> *@
